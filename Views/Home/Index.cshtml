@model IEnumerable<Booking>
@{  Layout = "_Layout"; }

<div id="totalBookings">
    @await Component.InvokeAsync(nameof(TotalBookings))
</div>

<form id="addform" asp-action="Book"  method="post">
    <div class="form-group">
        <label for="ClientName">Name:</label>  
        <input class="form-control" name="ClientName" />
    </div> 
    <div class="form-group">
        <label for="Location">Location:</label>
        <input class="form-control" name="Location" />
    </div>
    <div class="text-right panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
    </div> 
</form>
<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr><th>ID</th><th>Client</th><th>Location</th><th>Booked On</th></tr></thead>
        <tbody>        
            @foreach (var b in Model)
             {
                    <tr>
                        <td>@b.BookingId</td>
                        <td>@b.ClientName</td>
                        <td>@b.Location</td>
                        <td>@b.BookedOn</td>
                    </tr>        
            }
        </tbody>
</table>